    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
        </tr>
        </thead>
        <tbody>
          <%@categories.each do |category|%>
            <tr> <!-- Add this line -->
              <td><%=category.id%></td>
              <td><%=category.name%></td>
              <td><%=category.description%></td>

              <td class="d-flex align-items-center">
                  <%= link_to 'edit', edit_category_path(category), class: "btn btn-primary" %>
                  <%= button_to 'delete', category, method: :delete, class: "btn btn-danger mx-2" %>
              </td>

            </tr> <!-- Add this line -->
          <%end%>

        </tbody>
    </table>
    </div>
</div>

