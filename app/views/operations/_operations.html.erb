<div class="m-2 shadow p-3 mb-5 bg-body-tertiary rounded">
    <div class="table-responsive" style="height: 300px; overflow-y: scroll;">
  <div>
  <%=form_with model: @operation do |form|%>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.select :category_id, options_for_select(Category.all.map {|cat| [cat.name, cat.id]})%>
  <%end%>
  </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">Type</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col">Control</th>
        </tr>
        </thead>
        <tbody>
          <%@operations.each do |operation|%>
            <tr> <!-- Add this line -->
              <td><%=operation.id%></td>
              <td><%=operation.category.name%></td>
              <td><%=operation.category_type%></td>
              <td><%=operation.amound%></td>
              <td><%=operation.odate%></td>
              <td><%=operation.description%></td>

              <td class="d-flex align-items-center">
                  <%= link_to 'edit', edit_operation_path(operation), class: "btn btn-primary" %>
                  <%= button_to 'delete', operation, method: :delete, class: "btn btn-danger mx-2" %>
              </td>

            </tr> <!-- Add this line -->
          <%end%>

        </tbody>
    </table>
    </div>
</div>

 <%=link_to "New operation", new_operation_path , class:"btn btn-primary mb-5"%>