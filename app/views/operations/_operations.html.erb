    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Category</th>
            <th scope="col">Type</th>
            <th scope="col">Amount</th>
            <th scope="col">Date</th>
            <th scope="col">Description</th>
            <th scope="col">Control</th>
        </tr>
        </thead>
        <tbody>
          <%@operations.each do |operation|%>
            <tr> <!-- Add this line -->
              <td><%=operation.id%></td>
              <td><%=operation.category.name%></td>
              <td><%=operation.category_type%></td>
              <td><%=operation.amound%></td>
              <td><%=operation.odate%></td>
              <td><%=operation.description%></td>

              <td class="d-flex align-items-center">
                  <%= link_to 'edit', edit_operation_path(operation), class: "btn btn-primary" %>
                  <%= button_to 'delete', operation, method: :delete, class: "btn btn-danger mx-2" %>
              </td>

            </tr> <!-- Add this line -->
          <%end%>

        </tbody>
    </table>
    </div>
</div>

